{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "filesGlob": [
        "app/**/*.ts"
    ],
    "files": [
        "app/typings/tsd.d.ts",
        "app/typings/angularjs/angular-mocks.d.ts",
        "app/typings/angularjs/angular.d.ts",
        "app/typings/core-js/core-js.d.ts",
        "app/typings/jasmine/jasmine.d.ts",
        "app/typings/jquery/jquery.d.ts",
        "app/app.ts",
        "app/feature/feature.module.ts",
        "app/feature/feature.spec.ts",
        "app/feature/feature.ts",
        "app/feature/index.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false
}
